<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:id="@+id/container"
    android:paddingTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:src="@color/black"
        android:id="@+id/iv_flagContinent"
        android:layout_width="90dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_continent"
        android:text="continent"
        android:layout_marginStart="8dp"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_flagContinent"
        app:layout_constraintTop_toTopOf="@id/iv_flagContinent"
        app:layout_constraintStart_toEndOf="@id/iv_flagContinent"/>

</androidx.constraintlayout.widget.ConstraintLayout>